#pragma once
#include "IObject.hpp"

namespace Indie
{
  enum TYPEOBJECT
    {
  UNDEFINED,
    BLOCK,
    FIRE,
    PERSO,
    POWERUP,
    BOMB,
    BREAKABLE
    };
  class ObjectNC
  {
  std::string                 _name;
  TYPEOBJECT		      _type;
  Vector3d                    _position;
  // If a parameters is not used by the object (String for gameObject
  //  will do nothing

public:
  ObjectNC();
    ObjectNC(int);
  ~ObjectNC();
  virtual void			setName(std::string const &);
  virtual void			setPosition(Vector3d const &);

  virtual std::string const    &getName() const;
  virtual std::string const    &getString() const;
  virtual Vector3d const       &getPosition() const;
  virtual void			setType(TYPEOBJECT const);
TYPEOBJECT			getType() const;
};
}
